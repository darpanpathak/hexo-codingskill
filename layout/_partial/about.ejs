<div class="row mb-4">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg rounded justify-content-center cs-about-left">
            <div class="card-body">
                <div class="cs-about-avatar mt-4">
                    <img src="<%- theme.author.avatar || 'https://www.w3schools.com/w3images/avatar2.png' %>" class="circle" />
                </div>

                <div class="set-bg"></div>

                <h2 class="text-center mt-3"><%-item.name %></h2>
                <h6 class="text-center mt-1"><%- item.tagLine %></h6>

                <div class="cs-social-icon-list">
                    <span><a href="<%- theme.author.facebook %>"><i class="fab fa-facebook"></i></a></span>
                    <span><a href="<%- theme.author.twitter %>"><i class="fab fa-twitter"></i></a></span>
                    <span><a href="<%- theme.author.github %>"><i class="fab fa-github"></i></a></span>
                    <span><a href="<%- theme.author.instagram %>"><i class="fab fa-instagram"></i></a></span>
                </div>
            </div>
            <div class="card-footer cs-about-footer">
                <div class="lnks">
                    <a href="#" class="lnk">
                        <span class="text">Download CV</span>
                    </a>
                    <a href="#" class="lnk">
                        <span class="text">Contact Me</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-8">
        <div class="card mb-4 shadow-lg rounded justify-content-center cs-about-left">
            <div class="card-body">

                <!-- Content -->
                <%- item.content %>

            </div>
        </div>
    </div>
</div>