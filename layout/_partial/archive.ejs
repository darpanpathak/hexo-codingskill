<% if(false) { %>
<% page.posts.each(function(item){ %>
<%- partial('article-excerpt', {item: item}) %>
<% }); %>

<%- partial('pagination') %>

<% } %>


<% let last; postCount = 0; %>
<% page.posts.each(function(post, i) { %>

    <% let year = post.date.year(); %>

    <!-- if post year is changed, not same as the last one -->
    <% if(last !== year) { %> 
        <% last = year; postCount = 0; %>

        <h1> <a href="<%- url_for('archives/' + year) %>" class="archive-year"><%= year %></a></h1>
        
    <% } %>

    <% postCount++; %>
    
    <%- partial('summary', {item: post}) %>


<% }) %>