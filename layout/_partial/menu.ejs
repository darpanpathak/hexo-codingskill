<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container">

    <% if (config.logo_url) { %>
    <a class="navbar-brand" href="/index.html">
      <img src="<%- config.logo_url %>" height="28" alt="<%- config.logo_text %> ">
    </a>
    <% } else { %>
    <a class="navbar-brand" href="/index.html"> <%- config.logo_text || config.title %> </a>
    <% } %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
      aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ">

        <% for (var i in config.menu){ %>
        <li class="nav-item <%= is_current(config.menu[i]) ? 'active' : '' %>">
          <a class="nav-link" href="<%- url_for(config.menu[i]) %>"> <%= i %> </a>
        </li>

        <% } %>

      </ul>

      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <form>
            <div class="input-group">
              <span class="input-group-prepend">
                <div class="input-group-text bg-white border-0">
                  <i class="fa fa-search"></i>
                </div>
              </span>
              <input type="text" id="csSearchBox" class="form-control border-0" placeholder="search ..." />
            </div>

            <div class="cs-auto-complete" style="display: none;">
              <ul> </ul>
            </div>
          </form>
        </li>
      </ul>

    </div>
  </div>
</nav>