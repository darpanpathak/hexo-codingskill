<div class="card mb-4 shadow-lg rounded">

    <div class="card-body">

        <h2 class="card-title">
            <%- partial('post/title', {item: item}) %>
        </h2>



    </div>
    <div class="card-footer text-muted">
        Posted on <%= item.date.format(config.date_format) %> by
        <a href="<%- config.root %><%- item.path %>"><%- item.author || config.author %></a>
    </div>
</div>